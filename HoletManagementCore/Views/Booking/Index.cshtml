@model IEnumerable<HotelManagementCore.Domain.Entities.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <h2>My Bookings</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Villa Name</th>
                        <th>Check-In Date</th>
                        <th>Check-Out Date</th>
                        <th>Total Cost</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.Id</td>
                            <td>@booking.villa.Name</td>
                            <td>@booking.CheckInDate.ToShortDateString()</td>
                            <td>@booking.CheckOutDate.ToShortDateString()</td>
                            <td>$@booking.TotalCost</td>
                            <td>@booking.Status</td>
                            <td>
                                <a href="@Url.Action("BookingConfirmation", "Booking", new { id = booking.Id })" class="btn btn-info btn-sm">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Optional: Add some custom styling if needed -->
<style>
    .table th, .table td {
        vertical-align: middle;
    }
</style>
