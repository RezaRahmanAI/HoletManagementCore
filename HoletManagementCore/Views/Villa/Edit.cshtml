@model HotelManagementCore.Domain.Entities.Villa


@{
    ViewData["Title"] = ViewBag.Title;
}

<div class="container mt-5">
    <h2 class="text-center mb-4 bg-primary">
         Update Ville
    </h2>
    @* <h2 class="text-center mb-4 bg-primary">
        @(ViewBag.Title == "Update" ? "Update Ville" : " Create New Villa")
    </h2> *@
    <form asp-action="Update" method="post">

        @* <span asp-validation-summary="None"></span> *@
        <input asp-for="Id" hidden />
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter villa name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter description"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="price" class="form-label">Price ($)</label>
            <input asp-for="price" type="number" step="0.01" class="form-control" placeholder="Enter price" required />
            <span asp-validation-for="price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Sqft" class="form-label">Square Feet</label>
            <input asp-for="Sqft" type="number" class="form-control" placeholder="Enter area in square feet" required />
            <span asp-validation-for="Sqft" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Occupency" class="form-label">Occupancy</label>
            <input asp-for="Occupency" type="number" class="form-control" placeholder="Enter maximum occupancy" required />
            <span asp-validation-for="Occupency" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImgUrl" class="form-label">Image URL</label>
            <input asp-for="ImgUrl" type="url" class="form-control" placeholder="Enter image URL" />
            <span asp-validation-for="ImgUrl" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">
                Update
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>

