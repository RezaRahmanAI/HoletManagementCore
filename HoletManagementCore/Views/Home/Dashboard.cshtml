
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles */
        body {
            font-family: Arial, sans-serif;
        }
        .sidebar {
            height: 100vh;
            background: #343a40;
            color: white;
            position: fixed;
            width: 250px;
            padding-top: 20px;
        }
        .sidebar a {
            color: white;
            text-decoration: none;
            padding: 10px;
            display: block;
        }
        .sidebar a:hover {
            background: #495057;
        }
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
        .card h4 {
            font-size: 1rem;
            margin-bottom: 10px;
        }
        .dashboard-header {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }
    </style>



    <!-- Sidebar -->
    <div class="sidebar">
        <h3 class="text-center">Admin Dashboard</h3>
        <a href="#dashboard" class="mt-3"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a href="#bookings"><i class="fas fa-calendar-alt"></i> Bookings</a>
        <a href="#customers"><i class="fas fa-users"></i> Customers</a>
        <a href="#reports"><i class="fas fa-chart-line"></i> Reports</a>
        <a href="#settings"><i class="fas fa-cog"></i> Settings</a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="dashboard-header">
            Welcome to the Admin Dashboard
        </div>

        <div class="container-fluid">
            <!-- Dashboard Cards Row -->
            <div class="row">
                <!-- Total Customers Card -->
                <div class="col-md-3 mb-4">
                    <div class="card shadow-sm border-left-info">
                        <div class="card-body">
                            <h4>Total Customers</h4>
                            <div class="d-flex justify-content-between align-items-center">
                                <h2>@ViewData["TotalCustomers"]</h2>
                                <i class="fas fa-users fa-2x text-info"></i>
                            </div>
                        </div>
                    </div>
                </div>
            <li><a class="dropdown-item" asp-area="" asp-controller="VillaNumber" asp-action="Index">VillaNumber</a></li>
                <!-- Total Bookings Card -->
                <div class="col-md-3 mb-4">
                    <div class="card shadow-sm border-left-primary">
                        <div class="card-body">
                            <h4>Total Bookings</h4>
                        <div class="d-flex justify-content-between align-items-center" >
                                <h2 >@ViewData["TotalBookings"]</h2>
                                <i class="fas fa-calendar-alt fa-2x text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Total Canceled Bookings Card -->
                <div class="col-md-3 mb-4">
                    <div class="card shadow-sm border-left-danger">
                        <div class="card-body">
                            <h4>Canceled Bookings</h4>
                            <div class="d-flex justify-content-between align-items-center">
                                <h2>@ViewData["TotalCanceled"]</h2>
                                <i class="fas fa-times-circle fa-2x text-danger"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Total Completed Bookings Card -->
                <div class="col-md-3 mb-4">
                    <div class="card shadow-sm border-left-success">
                        <div class="card-body">
                            <h4>Completed Bookings</h4>
                            <div class="d-flex justify-content-between align-items-center">
                                <h2>@ViewData["TotalCompleted"]</h2>
                                <i class="fas fa-check-circle fa-2x text-success"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Total Earnings Card -->
                <div class="col-md-3 mb-4">
                    <div class="card shadow-sm border-left-secondary">
                        <div class="card-body">
                            <h4>Total Earnings</h4>
                            <div class="d-flex justify-content-between align-items-center">
                                <h2>$@ViewData["TotalEarnings"]</h2>
                                <i class="fas fa-dollar-sign fa-2x text-secondary"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Dashboard Cards Row -->
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>


