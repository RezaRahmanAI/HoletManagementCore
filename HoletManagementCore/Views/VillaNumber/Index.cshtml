@model IEnumerable<HotelManagementCore.Domain.Entities.VillaNumber>

@{
    ViewData["Title"] = "Villa Numbers";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Villa Numbers</h2>
    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Villa" asp-action="Create" class="btn btn-primary">Create new</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th scope="col">Villa ID</th>
                <th scope="col">Villa Number</th>                
                <th scope="col">Special Details</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var villa in Model)
            {
                <tr>
                    <td>@villa.VillaId</td>
                    <td>@villa.VillaNo</td>                    
                    <td>@villa.SpecialDetails ?? "N/A"</td>
                    <td>
                        <!-- Edit Button -->
                        <a href="@Url.Action("Edit", "VillaNumber", new { id = villa.VillaNo })" class="btn btn-sm btn-primary">Edit</a>

                        <!-- Delete Button with a Confirmation -->
                        <form action="@Url.Action("Delete", "VillaNumber", new { id = villa.VillaNo })" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this villa number?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
